{
  "name": "@ducanh2912/next-pwa-project",
  "type": "module",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@8.7.5",
  "workspaces": [
    "docs",
    "packages/**",
    "examples/**",
    "!examples/**/.next"
  ],
  "scripts": {
    "build": "cross-env FORCE_COLOR=1 turbo run build --filter=./packages/*",
    "deps": "node ncu.js",
    "dev": "cross-env FORCE_COLOR=1 turbo run dev --parallel --filter=./packages/*",
    "docs:build": "cross-env FORCE_COLOR=1 turbo run build --filter=./docs",
    "docs:lint": "cross-env FORCE_COLOR=1 turbo run lint --parallel --filter=./docs",
    "nochange": "changeset --empty",
    "examples:build": "cross-env FORCE_COLOR=1 turbo run build --filter=./examples/* --concurrency=50%",
    "examples:dev": "cross-env FORCE_COLOR=1 turbo run dev --parallel --filter=./examples/*",
    "examples:lint": "cross-env FORCE_COLOR=1 turbo run lint --parallel --filter=./examples/*",
    "format": "prettier --write",
    "format:all": "pnpm format .",
    "format:check": "prettier --check .",
    "lint": "cross-env FORCE_COLOR=1 turbo run lint --parallel --filter=./packages/*",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "publish-packages": "pnpm typecheck && pnpm lint && pnpm build && changeset publish",
    "test": "cross-env FORCE_COLOR=1 turbo run test --filter=./packages/*",
    "typecheck": "cross-env FORCE_COLOR=1 turbo run typecheck"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@ducanh2912/next-pwa": "workspace:*",
    "@types/node": "20.10.4",
    "@types/shell-quote": "1.7.5",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "cross-env": "7.0.3",
    "eslint": "8.55.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-turbo": "1.11.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "fast-glob": "3.3.2",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "15.2.0",
    "npm-check-updates": "16.14.11",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "0.5.9",
    "rimraf": "5.0.5",
    "shell-quote": "1.8.1",
    "tslib": "2.6.2",
    "turbo": "1.11.1",
    "typescript": "5.4.0-dev.20231210"
  }
}
